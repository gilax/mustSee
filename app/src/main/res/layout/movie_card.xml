<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_card"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_album_radius">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:id="@+id/movie_poster"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:clickable="true"
                android:contentDescription="@string/poster_description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/movie_title"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_title"
                android:padding="@dimen/movie_title_padding"
                android:textColor="@color/movie_title"
                android:textSize="@dimen/movie_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_poster"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_card_button"
                android:layout_gravity="top|right"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_add"
                app:layout_constraintTop_toTopOf="@id/movie_poster"
                app:layout_constraintRight_toRightOf="@id/movie_poster"
                android:tint="@color/black_x_ray"
                app:backgroundTint="@color/white_x_ray"/>

            <TextView
                android:layout_width="@dimen/ic_movie_overflow_width"
                android:layout_height="@dimen/ic_movie_overflow_height"
                android:id="@+id/overflow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/ic_movie_overflow_margin_top"
                android:layout_marginRight="@dimen/ic_movie_overflow_margin_top"
                android:scaleType="centerCrop"
                android:text="@string/vertical_ellipsis"
                android:textAppearance="?android:textAppearanceLarge"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
